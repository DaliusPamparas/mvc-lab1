@model IEnumerable<Mvc.Data.Models.Photo>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GalleryID)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GalleryID)
            </td>
            <td>
                <img src="@item.Path" width="220" />
            </td>

            <td style="background-color:plum;">
                @foreach (var comment in item.Comments)
                {
                    <p>
                        @comment.CommentString
                    </p>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PhotoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PhotoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PhotoId })
                @Html.ActionLink("Make Comment", "Comment", "Home", new { id = item.PhotoId }, null)
            </td>
        </tr>
    }

</table>


